    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/createPersonTitle"
        android:id="@+id/textViewTitle"
        android:paddingTop="28dp"

        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/textView2" />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/name"
           android:id="@+id/textView0"
           android:paddingTop="128dp"
           android:layout_alignParentTop="true"
           android:layout_alignStart="@+id/name"
           />


    <MultiAutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:layout_below="@+id/textView0"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="128dp"
        android:layout_marginRight="128dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:singleLine="true" />


   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/national_id"
       android:id="@+id/textView2"
       android:paddingTop="12dp"
       android:layout_below="@+id/name"
       android:layout_alignStart="@+id/nationalid" />

   <MultiAutoCompleteTextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/nationalid"
       android:layout_below="@+id/textView2"

       android:layout_marginLeft="128dp"
       android:layout_marginRight="128dp"
       android:layout_alignParentEnd="true"
       android:layout_alignParentStart="true"
       android:singleLine="true" />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/facility_name"
           android:id="@+id/textView3"
           android:paddingTop="12dp"
           android:layout_below="@+id/nationalid"
           android:layout_alignStart="@+id/facility" />

       <MultiAutoCompleteTextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/facility"
           android:layout_below="@+id/textView3"
           android:layout_marginLeft="128dp"
           android:layout_marginRight="128dp"
           android:layout_alignParentEnd="true"
           android:layout_alignParentStart="true"
           android:singleLine="true" />

