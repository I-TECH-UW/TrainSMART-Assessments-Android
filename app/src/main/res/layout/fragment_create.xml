<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.itech.trainsmart.assessments.CreateFragment">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/name_nationalId_facility"
           android:id="@+id/textView0"
           android:paddingTop="128dp"
           android:layout_alignParentTop="true"
           android:layout_alignStart="@+id/name"
           />


    <com.itech.trainsmart.assessments.ClearableAutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:layout_below="@+id/textView0"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:singleLine="true" />


    <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/assessment_name"
              android:id="@+id/textView4"
              android:paddingTop="12dp"
              android:layout_alignStart="@+id/assessment_type"
              android:layout_below="@+id/name" />

          <Spinner
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/assessment_type"

              android:layout_below="@+id/textView4"
              android:layout_marginLeft="28dp"
              android:layout_marginRight="28dp"
              android:layout_alignParentEnd="true"
              android:layout_alignParentStart="true"/>

    <!--       -->
              <Button
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Create"
                  android:id="@+id/btnCreate"
                  android:paddingTop="12dp"
                  android:layout_centerVertical="true"
                  android:layout_below="@+id/assessment_type"
                  android:layout_alignEnd="@+id/assessment_type"
                  android:layout_marginTop="32dp" />




</RelativeLayout>
